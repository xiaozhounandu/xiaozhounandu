<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaozhounandu.mapper.LoginLogMapper">

    <resultMap id="LoginLogResultMap" type="com.xiaozhounandu.entity.LoginLog">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="ipAddress" column="ip_address"/>
        <result property="device" column="device"/>
        <result property="location" column="location"/>
        <result property="result" column="result"/>
        <result property="errorMsg" column="error_msg"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="selectByQuery" resultMap="LoginLogResultMap">
        SELECT * FROM login_log
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="result != null">
                AND result = #{result}
            </if>
            <if test="startDate != null">
                AND<![CDATA[ create_time >= #{startDate} ]]>
            </if>
            <if test="endDate != null">
                AND<![CDATA[ create_time <= #{endDate} ]]>
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="countByQuery" resultType="int">
        SELECT COUNT(*) FROM login_log
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="result != null">
                AND result = #{result}
            </if>
            <if test="startDate != null">
                AND<![CDATA[ create_time >= #{startDate} ]]>
            </if>
            <if test="endDate != null">
                AND<![CDATA[ create_time <= #{endDate} ]]>
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.xiaozhounandu.entity.LoginLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO login_log (
            user_id, username, ip_address, device, location, result, error_msg
        ) VALUES (
            #{userId}, #{username}, #{ipAddress}, #{device}, #{location}, #{result}, #{errorMsg}
        )
    </insert>

</mapper>
